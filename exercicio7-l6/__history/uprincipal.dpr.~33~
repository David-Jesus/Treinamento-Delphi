program uprincipal;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var
  wNumeroLidoUm       ,
  wNumeroLidoDois     ,
  wOpcaoLida          : String;
  wNrGolsTimeUm       ,
  wNrGolsTimeDois     ,
  wOpcao              ,
  wNrVitoriasTimeUm   ,
  wNrVitoriasTimeDois ,
  wNrGrenais          ,
  wEmpates            ,
  wContador           : Integer;
begin
  Writeln('|-----------------------------------------------|');
  Writeln('|Sistema para cálculo de estastísticas de jogos:|');
  Writeln('|-----------------------------------------------|');
  Writeln('');
  wNrGolsTimeUm       := 0;
  wNrGolsTimeDois     := 0;
  wNrVitoriasTimeUm   := 0;
  wNrVitoriasTimeDois := 0;
  wEmpates            := 0;
  wNrGrenais          := 0;

  while True do
    begin
      Writeln('Digite o número de gols marcados pelo time Inter:');
      Readln(wNumeroLidoUm);
      Writeln('');

      Writeln('Digite o número de gols marcados pelo time Grêmio:');
      Readln(wNumeroLidoDois);
      Writeln('');

      try
        if TryStrToInt(wNumeroLidoUm, wNrGolsTimeUm) and TryStrToInt(wNumeroLidoDois, wNrGolsTimeDois) then
           begin
             wNrGrenais := wNrGrenais + 1;
             wNrGolsTimeUm   := StrToInt(wNumeroLidoUm);
             wNrGolsTimeDois := StrToInt(wNumeroLidoDois);

             if (wNrGolsTimeUm > wNrGolsTimeDois) then
                wNrVitoriasTimeUm := wNrVitoriasTimeUm + 1
             else
               if wNrGolsTimeDois > wNrGolsTimeUm then
                  wNrVitoriasTimeDois := wNrVitoriasTimeDois + 1

             else
               wEmpates := wEmpates + 1;

             Writeln('Novo Grenal?');
             Writeln('1 - Sim');
             Writeln('2 - Não');
             Readln(wOpcaoLida);

             if not (TryStrToInt(wOpcaoLida, wOpcao)) or (StrToInt(wOpcaoLida) > 2) then
               begin
                 repeat
                   Writeln('Digite apenas números e opções "1" ou "2"!');
                   Writeln('');
                   Writeln('Novo Grenal?');
                   Writeln('1 - Sim');
                   Writeln('2 - Não');
                   Readln(wOpcaoLida);
                   if (StrToInt(wOpcaoLida) <> 2) or (StrToInt(wOpcaoLida) <> 1) then
                      wOpcaoLida := 'x';

                 until TryStrToInt(wOpcaoLida, wOpcao);
               end;

                 wOpcao := StrToInt(wOpcaoLida);

                 if (wOpcao = 2) then
                    begin
                      Writeln('Números de Grenais informados--------: ' + IntToStr(wNrGrenais));
                      Writeln('Número de vitórias do Inter----------: ' + IntToStr(wNrVitoriasTimeUm));
                      Writeln('Número de vitórias do Grêmio---------: ' + IntToStr(wNrVitoriasTimeDois));
                      Writeln('Número de Empates: ' + IntToStr(wEmpates));
                      Writeln('');

                      if (wNrVitoriasTimeUm > wNrGolsTimeDois) then
                         Writeln('O Inter venceu o maior número de grenais')
                      else
                        if (wNrVitoriasTimeDois > wNrVitoriasTimeUm) then
                        Writeln('O Grêmio venceu o maior número de grenais')
                      else
                        Writeln('Não houve vencedor');

                      Writeln('Digite Enter para sair.');
                      Readln;
                      Break;
                    end;
           end
      else
        begin
          Writeln('');
          Writeln('Digite apenas números!');
           Writeln('');
        end;

      except
       on E: Exception do
      end;
    end;
end.
